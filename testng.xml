<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="OrangeHRM Test Suite" verbose="0" parallel="false">

    <listeners>
        <!-- Disable ALL TestNG HTML reports -->
        <listener class-name="org.testng.reporters.XMLReporter"/>
    </listeners>

    <test name="OrangeHRM UI Test" enabled="true">

        <parameter name="environment" value="uat"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="cucumber.filter.tags" value="@AddEmployeeScenario"/>

        <classes>
            <class name="TestRunner.TestNGTestRunner"/>
        </classes>

    </test>
</suite>
